<mujoco model="panda apartment scene">
  <include file="panda.xml"/>

  <statistic center="0.3 0 0.5" extent="1.5"/>

  <visual>
    <headlight diffuse="0.7 0.7 0.7" ambient="0.25 0.25 0.25" specular="0.1 0.1 0.1"/>
    <rgba haze="0.25 0.30 0.35 1"/>
    <global azimuth="135" elevation="-15" offwidth="2048" offheight="1536"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.35 0.45 0.6" rgb2="0.05 0.1 0.15" width="512" height="3072"/>
    <texture type="2d" name="floor_tex" builtin="checker" mark="cross" rgb1="0.35 0.32 0.3" rgb2="0.28 0.26 0.24"
      markrgb="0.15 0.15 0.15" width="300" height="300"/>
    <material name="floor" texture="floor_tex" texrepeat="6 6" texuniform="true" reflectance="0.15"/>
    <material name="wall" rgba="0.88 0.9 0.92 1"/>
    <material name="window_trim" rgba="0.75 0.78 0.8 1"/>
    <material name="glass" rgba="0.7 0.85 0.95 0.2" specular="0.3" shininess="0.8"/>
    <material name="wood" rgba="0.55 0.4 0.25 1" reflectance="0.05"/>
    <material name="fabric" rgba="0.3 0.35 0.45 1"/>
    <material name="accent" rgba="0.85 0.5 0.3 1"/>
    <material name="plant_leaf" rgba="0.3 0.55 0.35 1" reflectance="0.1"/>
    <material name="plant_pot" rgba="0.45 0.35 0.28 1"/>
    <material name="metal" rgba="0.65 0.65 0.68 1" specular="0.4" shininess="0.6"/>
    <material name="frame" rgba="0.25 0.25 0.25 1"/>
  </asset>

  <worldbody>
    <light pos="0.5 -0.2 2.0" dir="0 0 -1" directional="true" diffuse="0.9 0.9 0.9" specular="0.1 0.1 0.1"/>
    <light pos="-1.0 1.2 1.8" dir="0 0 -1" directional="false" diffuse="0.6 0.6 0.6" specular="0.05 0.05 0.05"/>

    <geom name="floor" type="plane" size="0 0 0.05" material="floor"/>

    <!-- Walls -->
    <geom name="wall_back" type="box" pos="0 -2.0 1.2" size="2.2 0.05 1.2" material="wall"/>
    <geom name="wall_front" type="box" pos="0 2.0 1.2" size="2.2 0.05 1.2" material="wall"/>
    <geom name="wall_left" type="box" pos="-1.8 0 1.2" size="0.05 2.0 1.2" material="wall"/>
    <geom name="wall_right" type="box" pos="1.8 0 1.2" size="0.05 2.0 1.2" material="wall"/>

    <!-- Window with trim on the back wall -->
    <body name="window" pos="0.0 -1.95 1.2">
      <geom type="box" size="0.7 0.015 0.55" material="glass"/>
      <geom type="box" size="0.75 0.02 0.6" material="window_trim" contype="0" conaffinity="0"/>
    </body>

    <!-- Rug under the workspace -->
    <geom name="rug" type="box" pos="0.4 0.0 0.02" size="1.0 0.9 0.02" material="accent" rgba="0.75 0.45 0.3 1"/>

    <!-- Table workspace in front of the robot -->
    <body name="table" pos="0.7 0.0 0.4">
      <geom name="table_top" type="box" pos="0 0 0.36" size="0.5 0.35 0.04" material="wood"/>
      <geom type="box" pos="0.38 0.27 0.0" size="0.05 0.05 0.36" material="wood"/>
      <geom type="box" pos="0.38 -0.27 0.0" size="0.05 0.05 0.36" material="wood"/>
      <geom type="box" pos="-0.38 0.27 0.0" size="0.05 0.05 0.36" material="wood"/>
      <geom type="box" pos="-0.38 -0.27 0.0" size="0.05 0.05 0.36" material="wood"/>

      <!-- Small decorative items -->
      <geom name="table_lamp_base" type="cylinder" pos="0.2 -0.1 0.42" size="0.03 0.1" material="metal"/>
      <geom name="table_lamp_shade" type="cylinder" pos="0.2 -0.1 0.58" size="0.08 0.08" material="fabric" contype="0" conaffinity="0"/>
      <geom name="tablet" type="box" pos="-0.15 0.15 0.41" size="0.15 0.1 0.01" material="metal"/>
    </body>

    <!-- Couch along the left wall -->
    <body name="sofa" pos="-1.1 0.8 0.25">
      <geom type="box" pos="0 0 0.18" size="0.6 0.35 0.18" material="fabric"/>
      <geom type="box" pos="0 0.32 0.43" size="0.6 0.03 0.08" material="fabric"/>
      <geom type="box" pos="-0.55 0 0.22" size="0.05 0.35 0.22" material="fabric"/>
      <geom type="box" pos="0.55 0 0.22" size="0.05 0.35 0.22" material="fabric"/>
      <geom type="box" pos="0.0 -0.32 0.43" size="0.6 0.03 0.08" material="fabric"/>
      <!-- Cushions -->
      <geom type="box" pos="-0.2 0.18 0.4" size="0.18 0.08 0.09" material="accent" contype="0" conaffinity="0"/>
      <geom type="box" pos="0.25 0.18 0.4" size="0.18 0.08 0.09" material="accent" contype="0" conaffinity="0"/>
    </body>

    <!-- Bookshelf on the right wall -->
    <body name="bookshelf" pos="1.45 -0.2 0.85">
      <geom type="box" pos="0 0 0" size="0.15 0.45 0.85" material="wood"/>
      <geom type="box" pos="0 0 0.55" size="0.16 0.46 0.02" material="wood" contype="0" conaffinity="0"/>
      <geom type="box" pos="0 0 0.25" size="0.16 0.46 0.02" material="wood" contype="0" conaffinity="0"/>
      <geom type="box" pos="0 0 -0.05" size="0.16 0.46 0.02" material="wood" contype="0" conaffinity="0"/>
    </body>

    <!-- Potted plant near the window -->
    <body name="plant" pos="1.1 -1.2 0.0">
      <geom type="cylinder" pos="0 0 0.12" size="0.12 0.12" material="plant_pot"/>
      <geom type="cylinder" pos="0 0 0.38" size="0.05 0.28" material="plant_leaf" contype="0" conaffinity="0"/>
      <geom type="capsule" pos="0.05 0.02 0.52" quat="0.9239 0 0 0.3827" size="0.03 0.25" material="plant_leaf" contype="0" conaffinity="0"/>
      <geom type="capsule" pos="-0.04 -0.03 0.5" quat="0.9659 0 0 0.2588" size="0.03 0.22" material="plant_leaf" contype="0" conaffinity="0"/>
    </body>

    <!-- Wall art -->
    <body name="picture" pos="-0.5 -1.99 1.3">
      <geom type="box" size="0.35 0.01 0.45" material="frame"/>
      <geom type="box" size="0.32 0.005 0.42" material="accent" contype="0" conaffinity="0"/>
    </body>
  </worldbody>
</mujoco>
